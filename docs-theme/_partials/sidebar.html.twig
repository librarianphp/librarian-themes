<div class="column blog-sidebar">
    <div class="px-4 py-6 mb-2 mt-2">
        <div class="text-center mx-auto">
            <img class="mx-auto rounded-full" src="https://picsum.photos/seed/128/128">
            <h3 class="text-2xl my-2">About</h3>
        </div>

        <p class="text-justify px-4 py-2">{{ site_about() }}</p>
    </div>
            <h3 class="text-2xl px-4 py-6 mt-2">Table of Contents</h3>
            <ul class="shadow-md rounded-md">
                {% for type in content_types() %}
                    <li class="py-2 px-2 bg-blue-900 text-gray-100 font-bold{% if request_info().getRoute == type %} border-l-8 border-purple-600{% endif %}"><a href="/{{ type }}">{{ type|title|replace({'_': ' '}) }}</a></li>
                    <li>
                        <ul class="divide-y divide-gray-200">
                            {% for article in table_of_contents(type) %}
                                <li class="py-2 px-2 pl-6 {% if request_info().getSlug == article.getSlug %} bg-gray-300 text-blue-900 font-bold{% else %} hover:bg-gray-100{% endif %}"><a href="{{ site_root() }}{{ article.getLink() }}">{{ article.frontMatterGet('title') }}</a></li>
                            {% endfor %}
                        </ul>
                    </li>
                {% endfor %}
            </ul>



    <div class="px-4 py-6 mb-6 mt-10">
        <h3 class="text-2xl mb-6">Related Links</h3>
            <ul class="menu-list">
                {% for title,link in social_links() %}
                    {%  if link %}<li><a href="{{ link }}" title="{{ title }}"><span class="icon"><i class="fab fa-{{ title|lower }}"></i></span> {{ title }}</a></li>{% endif %}
                {% endfor %}
            </ul>
    </div>

</div><!-- /.blog-sidebar -->
